<%- include('layout/header') %>

<div class="container">
  <div class="row">
    <div class="col-lg-12">
      <div class="col-lg-12">
        <table class="table table-striped" style="margin-bottom: 10px;">
          <thead>
            <tr class="table-dark">
              <th>ID</th>
              <th>Image</th>
              <th>Name</th>
              <th>E-Mail</th>
              <th>Phone</th>
              <th>Action</th>
            </tr>
          </thead>
          <tbody>
            <% if (users && users.length > 0) { %>
              <% users.forEach(user => { %>
                  <tr>
                      <td><%= user._id %></td>
                      <td> <img src="<%= user.image %>" alt="" width="50%" class="img-thumbnail"></td>
                      <td><%= user.name %></td>
                      <td><%= user.email %></td>
                      <td><%= user.phone %></td>
                      <td>
                          <a href="/edit/<%= user._id %>" class="text-success"><i class="fas fa-edit fa-lg mx-1"></i></a>
                          <a href="/delete/<%= user._id %>" class="text-danger"><i class="fas fa-trash fa-lg mx-1"></i></a>
                      </td>
                  </tr>
              <% }); %>
          <% } else { %>
              <tr>
                  <td colspan="6">No users found</td>
              </tr>
          <% } %>
          </tbody>

        </table>
      </div>
    </div>

  </div>

</div>

<%- include('layout/footer') %>


